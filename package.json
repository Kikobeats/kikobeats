{
  "name": "kikobeats",
  "description": "Senior Product Engineer at IBM",
  "homepage": "https://kikobeats.com",
  "version": "1.0.2",
  "main": "index.js",
  "bin": {
    "kikobeats": "bin/index.js"
  },
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://kikobeats.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kikobeats/kikobeats.git"
  },
  "bugs": {
    "url": "https://github.com/Kikobeats/kikobeats/issues"
  },
  "keywords": [
    "beats",
    "card",
    "kiko",
    "kikobeats",
    "personal"
  ],
  "dependencies": {
    "boxen": "~4.2.0",
    "chalk": "~3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "ava": "~3.0.0",
    "ci-publish": "latest",
    "conventional-github-releaser": "latest",
    "coveralls": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "git-dirty": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "npm-check-updates": "latest",
    "nyc": "latest",
    "prettier-standard": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest"
  },
  "engines": {
    "node": ">= 8"
  },
  "files": [
    "bin",
    "index.js"
  ],
  "scripts": {
    "clean": "rm -rf node_modules",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "standard-markdown README.md && standard",
    "postrelease": "npm run release:tags && npm run release:github && ci-publish",
    "precommit": "lint-staged",
    "prerelease": "npm run update:check",
    "pretest": "npm run lint",
    "pretty": "prettier-standard index.js {core,test,bin,scripts}/**/*.js --single-quote --print-width 100",
    "release": "git-authors-cli && git add package.json && standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin HEAD:master",
    "test": "FORCE_COLOR=0  nyc ava",
    "update": "ncu -a",
    "update:check": "ncu -- --error-level 2"
  },
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "package.json": [
        "finepack",
        "git add"
      ],
      "*.js": [
        "prettier-standard",
        "git add"
      ],
      "*.md": [
        "standard-markdown",
        "git add"
      ]
    }
  }
}
